{
	"verbose": true,
	"automock": true,

	"testPathDirs": [
		"./tests/views"
	],

	"setupFiles": [
		"./tests/setup.js"
	],

	"testPathIgnorePatterns": ["__snapshots__"],

	"cacheDirectory": "./cache/jest",

	"testRegex": ".*(js[x]?)",

	"scriptPreprocessor": "node_modules/jest-css-modules",

	"moduleNameMapper": {
		"^.+\\.(css)$": "identity-obj-proxy"
	},

	"unmockedModulePathPatterns": [
		"react",
		"react-dom",
		"react-addons-test-utils",
		"react-addons-css-transition-group",
		"react-sortablejs",
		"chrome-stub",
		"sortablejs",
		"fbjs",
		"sinon"
	]
}
